<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.arcusx.parent</groupId>
		<artifactId>parent</artifactId>
		<version>1.0.0</version>
	</parent>
	<groupId>com.arcusx.chrono</groupId>
	<artifactId>chrono</artifactId>
	<name>arcus(x) chrono</name>
	<packaging>jar</packaging>
	<version>1.0.1-SNAPSHOT</version>
	<scm>
		<developerConnection>scm:svn:svn://svn.arcusx.local/repository/arcusx/chrono/trunk</developerConnection>
		<connection>scm:svn:svn://svn.arcusx.local/repository/arcusx/chrono/trunk</connection>
	</scm>
	<build>
		<finalName>arcusx-chrono</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
					<buildOutputDirectory>bin</buildOutputDirectory>
					<projectNameTemplate>arcusx-chrono</projectNameTemplate>
					<downloadSources>true</downloadSources>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0-beta-7</version>
				<configuration>
					<tagBase>svn://svn.arcusx.local/repository/arcusx/chrono/tags</tagBase>
					<useReleaseProfile>false</useReleaseProfile>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>